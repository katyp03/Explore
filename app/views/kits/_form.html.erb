<%= simple_form_for(@kit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :image %>
    <%= f.input :kit_items %>

    	<% @kit.kit_items.each do |kit_item| %>
			<%= kit_item.item.name %><br />
		<% end %><br />

    <%= f.association :experiment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>