<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'New Step', new_step_path %><br /><br />
<% end %>

<% @steps.each do |step| %>
  <% if @experiment == step.experiment %>
    <div class="stepDiv">
      <strong><i><%= step.number %></i></strong><br />
      <%= step.body %><br />
      <%= image_tag step.image %><br />
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to 'Show', step %>
        <%= link_to 'Edit', edit_step_path(step) %>
        <%= link_to 'Delete', step, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <br /><br />
    </div>
  <% end %>
<% end %>