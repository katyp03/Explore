<div class="articleHome" style="background: url('/assets/news.jpg'); background-size: cover;     background-attachment: fixed;">
	<% if user_signed_in? %>
		<h1>Top National Geographic Articles</h1><br />
	<% else %>
		<h1>Top National Geographic Articles</h1><br />
			<p><i>(Must be signed in to save articles)</i></p>
	<% end %>

	<% @news_info.each do |article|  %>
		<div id="articleDiv">
		<a href="<%= article.alink %>">
		<h3><%= article.name %></h3>
		<% if article.picture %>
			<img class="newsImage" src="<%= article.picture %>" />
		<% else %>
			<br /><h4>This article doesn't have an image.</h4><br />
		<% end %>
		<p class="articleDate"><%= article.date %></p>
		<p><%= article.overview.html_safe %></p></a>
		<% if user_signed_in? %>
			<div id="article_button_<%= article.id %>" class="article_button">
				<% if article.favorited? current_user %>
        			<%= button_remove_article article %>
      			<% else %>
        			<%= button_add_article article %>
      			<% end %>
     		</div>
		<% end %>
		</div>
	<% end %>
	
</div>