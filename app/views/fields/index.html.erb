<div id="fieldIndexDiv">
<h1>Fields</h1><br />
	<% if user_signed_in? && current_user.admin? %>
		<%= link_to 'New Field', new_field_path %><br />
	<% end %>
  <% @fields.each do |field| %>
  	<div class="fieldPreview">
    	<a href="/fields/<%= field.id %>">
    	<div class="fieldImageSpan" style="background:url('<%= field.image.url %>'); background-size:cover; background-position:center; background-repeat:no-repeat;">	<br /><br /><br /><br /><br /><h2><strong><%= field.name %></strong></h2></div></a>
    	<% if user_signed_in? && current_user.admin? %>
    		<%= link_to 'Edit', edit_field_path(field) %> | 
    		<%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %>
    	<% end %>
    </div>
  <% end %>
</div>









